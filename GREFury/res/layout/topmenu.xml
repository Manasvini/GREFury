<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_screen_background"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/quit_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/profile_button"
        android:layout_marginBottom="42dp"
        android:text="quit"
        
        />

    <Button
        android:id="@+id/profile_button"
       android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/quit_button"
        android:layout_centerHorizontal="true"
        android:text="profile"
         />

    <Button
        android:id="@+id/practice_button"
      android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/profile_button"
        android:layout_alignRight="@+id/profile_button"
        android:text="practice"
        
        android:textColor="#000000" />

    <Button
        android:id="@+id/play_button"
         android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/practice_button"
        android:layout_alignLeft="@+id/practice_button"
       
        android:text="play"
        android:textColor="#000000" />
    
</RelativeLayout>